<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/layoutPaycheckDataTopBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#707070"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textPayPeriod"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_weight="9"
            android:text="2016/01/01 - 2016/01/14"
            android:textColor="#fff"
            android:textSize="24sp" />

        <ImageView
            android:id="@+id/imgArrowUpDown"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_action_arrow_up" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutPaycheckDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/item_border"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textPaidBy"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_weight="1.3"
                android:text="Employer: "
                android:textColor="#fff"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="Walmart Canada"
                android:textColor="#0080ff"
                android:textSize="24sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textPaydayLabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_weight="1.3"
                android:text="Payday: "
                android:textColor="#fff"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textPayday"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="2017/07/19"
                android:textColor="#0080ff"
                android:textSize="24sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textSalaryLabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_weight="1.3"
                android:text="Salary: "
                android:textColor="#fff"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textSalary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="$140.44"
                android:textColor="#0080ff"
                android:textSize="24sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textPayTypeLabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_weight="1.3"
                android:text="Pay Type:"
                android:textColor="#fff"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textPayType"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="Gross-Pay"
                android:textColor="#0080ff"
                android:textSize="24sp" />
        </LinearLayout>

        <Button
            android:id="@+id/btnMoreDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="More Details" />

    </LinearLayout>

</LinearLayout>